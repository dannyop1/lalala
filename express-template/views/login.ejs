  <%- include('./components/navbar') %> <%- include('./components/script') %>
  <body>
    <form id="loginForm">
    <div class="hero is-fullheight">
      <div class="hero-body is-justify-content-center is-align-items-center">
        <div class="columns is-flex is-flex-direction-column box">
          <div class="column">
            <label for="name">Username</label>
            <input id="usernameInput" class="input is-primary" type="text" placeholder="Enter username">
          </div>
          <div class="column">
            <label for="Name">Password</label>
            <input id="passwordInput" class="input is-primary" type="password" placeholder="Enter Password">
            <input type="checkbox">
              Remember my password
            </label>
          </div>
          <div class="control">
            <button class="button is-primary is-fullwidth" type="submit">Sign in</button>
          </div>
          <div class="has-text-centered">
            <p> Don't have an account?  <a href="/view/signup" class="has-text-primary">Sign up</a>
            </p>
          </div>
        </div>
      </div>
    </div>
    <% for( value of error ) { %>
      <div class="notification is-danger is-light mt-2">
        <%= "Error: " + value %>
      </div>
      <% } %>
  </form>
   
